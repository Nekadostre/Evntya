<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.RegistroClienteController"
            prefWidth="800.0" prefHeight="600.0"
            stylesheets="@css/estilos.css">

    <children>
        <Label text="Registrar Cliente"
               layoutX="300.0" layoutY="30.0"
               styleClass="titulo-bienvenida" />

        <GridPane layoutX="50.0" layoutY="100.0"
                  hgap="10" vgap="15">
            <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="texto-bienvenida"/>
            <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="campo-texto"/>

            <Label text="Apellidos:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="texto-bienvenida"/>
            <TextField fx:id="txtApellidos" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="campo-texto"/>

            <Label text="Correo:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="texto-bienvenida"/>
            <TextField fx:id="txtCorreo" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="campo-texto"/>

            <Label text="TelÃ©fono:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="texto-bienvenida"/>
            <TextField fx:id="txtTelefono" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="campo-texto"/>

            <Label text="RFC:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="texto-bienvenida"/>
            <TextField fx:id="txtRFC" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="campo-texto"/>
        </GridPane>

        <Button text="Guardar Cliente"
                onAction="#guardarCliente"
                layoutX="360.0" layoutY="370.0"
                styleClass="boton-login"/>

        <Label fx:id="lblMensaje"
               layoutX="320.0" layoutY="410.0"
               text="" styleClass="texto-error"/>

        <Button text="Volver al Panel"
                onAction="#volverAlPanelPrincipal"
                layoutX="670.0" layoutY="550.0"
                styleClass="boton-nav"/>

    </children>
</AnchorPane>
