<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="10"
      style="-fx-background-color:#F4F6F9;"
      fx:controller="controladores.ReservasController">

    <HBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Button text="◀" onAction="#mesAnterior"/>
        <Label fx:id="lblMesAnio"/>
        <Button text="▶" onAction="#mesSiguiente"/>
    </HBox>

    <GridPane fx:id="calendarioGrid" alignment="CENTER" hgap="5" vgap="5">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Button fx:id="btnRegresar" text="Regresar" onAction="#handleRegresarButtonAction"/>
    </HBox>
</VBox>
